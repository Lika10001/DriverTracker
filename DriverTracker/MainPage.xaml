<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverTracker.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <ListView>
                <!-- В каждом элементе должен отображаться статус прибора и кнопка подробнее-->
                </ListView>
            </StackLayout>
           
            <StackLayout>
                <!-- Название для кнопки может меняться-->
                <Button Text="Add Machine" BackgroundColor="CadetBlue" TextColor="White" CornerRadius="30" Margin="0, 15, 0, 0" />
            </StackLayout>
        </StackLayout>
       
    </ContentPage.Content>
</ContentPage>